{
  "name": "vscode-dfd-preview",
  "displayName": "DFD Preview",
  "description": "A Visual Studio Code extension to preview data flow diagrams from .dfd files.",
  "version": "0.0.1",
  "publisher": "zeno",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onOpenTextDocument:.dfd"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.previewDfd",
        "title": "Preview DFD"
      }
    ],
    "languages": [
        {
            "id": "dfd",
            "extensions": [".dfd"],
            "aliases": ["DFD"]
        }
    ],
    "menus": {
    "editor/title": [
      {
        "command": "extension.previewDfd",
        "when": "resourceExtname == .dfd",
        "group": "navigation"
      }
      ]
    },
    "configuration": {
    "type": "object",
    "title": "DFD Preview Settings",
    "properties": {
      "dfd.commandPath": {
        "type": "string",
        "default": "data-flow-diagram",
        "description": "Path to the data-flow-diagram command."
      }
    }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
